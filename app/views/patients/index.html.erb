<div class="col-md-12 col-sm-12 col-xs-12">
  <div class="x_panel">
    <div class="x_title">
      <h2>Patients <small>All users from clinic</small></h2>
      <ul class="nav navbar-right panel_toolbox">
        <li><a class="collapse-link"><i class="fa fa-chevron-up"></i></a>
        </li>
        <li class="dropdown">
          <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-expanded="false"><i class="fa fa-wrench"></i></a>
          <ul class="dropdown-menu" role="menu">
            <li><a href="#">Settings 1</a>
            </li>
            <li><a href="#">Settings 2</a>
            </li>
          </ul>
        </li>
        <li><a class="close-link"><i class="fa fa-close"></i></a>
        </li>
      </ul>
      <div class="clearfix"></div>
    </div>
    <div class="x_content">
      <p class="text-muted font-13 m-b-30">
        <%= link_to  new_patient_path, class: 'btn btn-primary btn-round' do %>
        <i class="fa fa-plus"></i> New Patient
        <% end %>
      </p>
      <table id="datatable-responsive" class="table table-striped table-bordered dt-responsive nowrap" cellspacing="0" width="100%">
        <thead>
        <tr>
          <th>Name</th>
          <th>Identification</th>
          <th>Date of birth</th>
          <th>Male</th>
          <th>Address</th>
          <th>Phone</th>
          <th>Alt phone</th>
          <th>Email</th>
          <th>Show</th>
          <th>Edit</th>
          <th>Delete</th>
        </tr>
        </thead>

        <tbody>
        <% @patients.each do |patient| %>
            <tr>
              <td><%= patient.name %></td>
              <td><%= patient.identification %></td>
              <td><%= patient.date_of_birth %></td>
              <td><%= patient.male %></td>
              <td><%= patient.address %></td>
              <td><%= patient.phone %></td>
              <td><%= patient.alt_phone %></td>
              <td><%= patient.email %></td>
              <td><%= link_to 'Show', patient %></td>
              <td><%= link_to 'Edit', edit_patient_path(patient) %></td>
              <td><%= link_to 'Destroy', patient, method: :delete, data: { confirm: 'Are you sure?' } %></td>
            </tr>
        <% end %>
        </tbody>
      </table>

    </div>
  </div>
</div>




<script src="js/pace/pace.min.js"></script>
<script type="text/javascript">
    $(document).ready(function() {
        $('#datatable').dataTable();
        $('#datatable-responsive').DataTable(
            {
                responsive: true
            }
        );
    });
    TableManageButtons.init();
</script>